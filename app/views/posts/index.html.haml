.row
  .col-md-4
    .card
      .avatar
        %img.img-responsive.img-thumbnail{alt: "", src: "/assets/no-user.png", width: "80"}
      .info
        .title
          %a
            %h4 #{current_user}
            %small 
              = current_user.email
        #user-status
          = render "status", user: current_user

  .col-md-7
    .panel-container
      .media
        .media-left
          = link_to image_tag("/assets/no-user.png", 
            class: "media-object img-thumbnail", width: "50"), root_path
        .media-body
          .media-heading
            .clearfix
              #form-posts
                = render "form", post: @post
            .row
              .col-md-9
                #img-holder
    #render-posts
      = render @posts
