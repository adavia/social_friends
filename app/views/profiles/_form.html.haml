= simple_form_for([user, profile], remote: true) do |f|  
  = f.input :gender, collection: [:male, :female], required: true
  = f.input :birthday, as: :date, start_year: Date.today.year,
    end_year: Date.today.year - 70
  = f.input :location, required: true
  = f.input :note, input_html: {rows: 3}
  = f.button :submit, "Submit", class: "btn btn-sm", data:{"disable-with": "Submitting.."}