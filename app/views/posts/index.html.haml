.row
  .col-md-4
    .card
      .avatar
        %img.img-responsive.img-thumbnail{alt: "", src: "http://lorempixel.com/80/80/people/9/"}
      .info
        .title
          %a
            %h4 #{current_user}
        #user-status
          = render "status", user: current_user

  .col-md-7
    .panel-container
      .clearfix
        #form-posts
          = render "form", post: @post
      .row
        .col-md-9
          #img-holder
    #render-posts
      = render @posts
