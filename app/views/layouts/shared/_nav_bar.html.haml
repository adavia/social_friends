%nav.navbar{class: "navbar-default navbar-fixed-top", role: "navigation"}
	.container
		.navbar-header
			= link_to "Social Friends", current_user ? posts_path : root_path, class: "navbar-brand"
			%button{type: "button", class: "navbar-toggle collapsed",
				"data-toggle": "collapse", "data-target": "#collapse"}
				%span.sr-only Toggle navigation
				%span.icon-bar
				%span.icon-bar
				%span.icon-bar

		.collapse.navbar-collapse#collapse
			%ul.nav.navbar-nav.navbar-right
				- unless user_signed_in?
					%li{class: active_link(new_user_registration_path)}
						= link_to "Sign up", new_user_registration_path
					%li{class: active_link(new_user_session_path)}
						= link_to "Sign in", new_user_session_path

				- if user_signed_in?
					%p.navbar-text
						Signed in as #{current_user}
					%li
						= link_to "Sign out", destroy_user_session_path, method: :delete
