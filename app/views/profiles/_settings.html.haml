.card
  .card-heading
  .avatar.img-thumbnail
    = image_tag(user_avatar(user), class: "img-responsive")
  .info
    %h3
      = link_to user, [user, :profile]
    .desc
      = fa_icon("calendar")
      Joined in
      = user.created_at.strftime("%B %Y")
    - if current_user != user
      #user-actions
        = render "profiles/actions", user: user

.panel-container
  .clearfix
    = link_to "View photos", [user, :attachments]
    .pull-right
      - if user == current_user
        = link_to "Settings", edit_user_registration_path, class: "btn btn-default btn-xs"
        = link_to "Profile", [:edit, user, :profile], class: "btn btn-primary btn-xs"